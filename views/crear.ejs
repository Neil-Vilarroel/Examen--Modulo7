<%- include("template/cabecera", {tituloWeb: 'Página Crear Nuevo Paciente'}) %>

<div class="container">
    <br>
    <h1>Crear nuevo Paciente</h1>
    <br>
    <form action="agregarPaciente" class="my-2" method="POST">
    
        <input 
            type="text"
            placeholder="Ingrese Nombre"
            class="form-control my-2"
            name="nombre"
        >
    
        <input 
            type="text"
            placeholder="Ingrese Especie"
            class="form-control my-2"
            name="especie"
        >

        <input 
            type="text"
            placeholder="Ingrese Raza"
            class="form-control my-2"
            name="raza"
        >

        

        <input 
            type="text"
            placeholder="Ingrese Nombre Responsable"
            class="form-control my-2"
            name="nombreResponsable"
        >
    
        <button
            type="submit"
            class="btn btn-danger btn-block"
        >
            Agregar Paciente ​
        </button>
    
    </form>

  </div>

